{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <style>
        /* Cancel Chrome's autofilled colors */
        input:-webkit-autofill { -webkit-text-fill-color: #fff !important; }
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active { -webkit-box-shadow: 0 0 0 30px #23272a inset !important; }
        body {
            margin: 0 auto;
            background: url("{{ asset('assets/imgs/discord-bg-1.jpg') }}") no-repeat center center fixed;
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        .fullscreen {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        .container {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
        .container .main-window {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #2c2f33;
            flex-direction: column;
            box-shadow: 0 0 10px 1px #23272a;
            border-radius: 3px;
            padding: 32px;
            min-width: 350px;
        }
        .container .main-window .welcome {
            display: flex;
            align-items: center;
            flex-direction: column;
        }
        .container .main-window .welcome .primary-txt {
            color: #fff;
            font-size: 24px;
            font-weight: 600;
            line-height: 30px;
        }
        .container .main-window .welcome .secondary-txt {
            color: #b9bbbe;
            font-size: 16px;
            line-height: 20px;
        }
        .container .main-window form {
            margin: 30px 0 30px 0;
            width: 100%;
        }
        .container .main-window form .form-field {
            display: flex;
            flex-direction: column;
        }
        .container .main-window form .form-field label {
            color: #8e9297;
            font-size: 12px;
            line-height: 16px;
            text-transform: uppercase;
            margin: 5px 0;
        }
        .container .main-window form .form-field input {
            border: #0a0a0a 1px solid;
            border-radius: 3px;
            background-color: #23272a;
            color: #fff;
            padding: 10px;
            margin: 5px 0;
        }
        .container .main-window form .form-field input:focus {
            outline: none !important;
            border:1px solid #7289da;
        }
        .container .main-window form .login-btn {
            display: flex;
            background-color: #7289da;
            color: #fff;
            border-radius: 3px;
            text-decoration: none;
            justify-content: center;
            padding: 10px;
            margin-top: 20px;
        }
        .container .main-window form .login-btn:hover {
            background-color: #677bc4;
        }
    </style>

    <div class="fullscreen">
        <div class="container">
            <div class="main-window">
                <div class="welcome">
                    <span class="primary-txt">Welcome !</span><br>
                    <span class="secondary-txt">Let's do some amazing things together !</span>
                </div>
                <form action="" method="post">
                    <div class="form-field">
                        <label for="name">name</label>
                        <input type="text" id="name" autocomplete="off">
                    </div>
                    <a href="#" type="submit" class="login-btn">Login</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}